<div class="row">
  <div class="medium-offset-2 medium-8 columns">

	<p id="notice"><%= notice %></p>

	  <h2><%= @post.title %></h2>

	<h5><%= @post.body %></h5>

	<h4>Comments (<%= @post.comments.length %>)</h4>
	<% @post.comments.each do |comment| %>
		<%# render comment %>

		<p>
			<strong><%= comment.commenter %>: </strong>
			<%= comment.body %>
		</p>
	<% end %>
	<p>
		<h4>Add a comment</h4>
			<%= form_for([@post, Comment.new]) do |f| %>
			<p>
				<strong><%= f.label :commenter %></strong><br>
				<%= f.text_field :commenter %>
			</p>
			<p>
				<strong><%= f.label :body %></strong><br>
				<%= f.text_area :body %>
			</p>
			<p><%= f.submit 'Add comment', class: 'button small success' %></p>
		<% end %>
	</p>

	<a href="<%= edit_post_path(@post) %>" class="button small secondary">Edit</a>
	<a href="<%= posts_path %>" class="button small info">Back</a>
  </div>
</div>
